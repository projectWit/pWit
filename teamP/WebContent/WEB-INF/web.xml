<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
	metadata-complete="true">
  <display-name>teamP</display-name>
  
  <filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
		
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- dispatcher Servlet 설정 : spring MVC 구현 -->
  <servlet>
   <servlet-name>dispatcher-members</servlet-name>
   <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>dispatcher-members</servlet-name>
   <url-pattern>/members/*</url-pattern>
  </servlet-mapping>
  <!-- // dispatcher Servlet 설정 : spring MVC 구현 -->
  
  <!-- dispatcher Servlet 설정 : spring MVC 구현 -->
  <servlet>
   <servlet-name>dispatcher-study</servlet-name>
   <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>dispatcher-study</servlet-name>
   <url-pattern>/study/*</url-pattern>
  </servlet-mapping>
  <!-- // dispatcher Servlet 설정 : spring MVC 구현 -->
  
  <!-- OPENEX Servlet 설정 : spring MVC 구현 -->
  <servlet>
   <servlet-name>OPENEX</servlet-name>
   <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
   <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
   <servlet-name>OPENEX</servlet-name>
   <url-pattern>*.op</url-pattern>
  </servlet-mapping>
  <!-- // OPENEX Servlet 설정 : spring MVC 구현 -->
  
  <!-- GM Servlet 설정 : spring MVC 구현 -->
  <servlet>
   <servlet-name>GM</servlet-name>
   <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
   <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
   <servlet-name>GM</servlet-name>
   <url-pattern>*.gm</url-pattern>
  </servlet-mapping>
  <!-- // dispatcher Servlet 설정 : spring MVC 구현 -->
  
</web-app>